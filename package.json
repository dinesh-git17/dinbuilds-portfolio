		"@types/react-dom": "^19",
		"@types/sanitize-html": "^2.16.0",
		"@vitejs/plugin-react": "^5.1.2",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"lint-staged": "^16.2.7",
		"tailwindcss": "^4",
		"typescript": "^5",
		"vitest": "^4.0.16"
	}
}
