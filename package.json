{
	"name": "dinbuilds-portfolio",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "biome check --write .",
		"lint:check": "biome check .",
		"format": "biome format --write .",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ssr": "node scripts/validate-ssr.cjs",
		"prepare": "husky || true"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
