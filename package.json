		"*.{js,jsx,json,css,md}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@vercel/analytics": "^1.6.1",
		"clsx": "^2.1.1",
		"framer-motion": "^12.27.0",
		"lucide-react": "^0.562.0",
		"next": "16.1.3",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"react-hook-form": "^7.71.1",
		"react-markdown": "^10.1.0",
		"redis": "^5.10.0",
		"remark-gfm": "^4.0.1",
		"resend": "^6.7.0",
		"sanitize-html": "^2.17.0",
		"zod": "^4.3.5",
